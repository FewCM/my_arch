#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "MEM hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem| head)" ;;
	3) st -e htop ;;
esac

LOADCOL="^C2^"
RAMCOL="^c#d8a657^"
DISKCOL="^C4^"
UPTIMECOL="^C5^"
TEMPCOL="^C6^"
TEXTCOL="^c#d4be98^"
SEP="^C1^󰅂"

get_ram()
{
    TOTAL_RAM=$(free -mh --si | awk  {'print $2'} | head -n 2 | tail -1)
    USED_RAM=$(free -mh --si | awk  {'print $3'} | head -n 2 | tail -1)
    MB="MB"

    echo "$RAMCOL󰡴 $TEXTCOL$USED_RAM/$TOTAL_RAM"
}
get_ram

#icon="^c#d3869b^ "

#date "+$icon %a, %m/%d %I:%M:%S %P"
