#!/bin/bash
play='^c#1db954^  ' #lines
paused='^c#1db954^  ' #arrow


case $BLOCK_BUTTON in
	1) playerctl -p ncspot play-pause ;;
	2) playerctl -p ncspot next ;;
	3) playerctl -p ncspot previous ;;
esac

[ $(playerctl -p ncspot status) = 'Playing' ] && echo "^c#1db954^  $(playerctl -p ncspot metadata --format '{{(title)}} - {{(artist)}}')" && exit
[ $(playerctl -p ncspot status) = 'Paused' ] && echo "^c#1db954^  $(playerctl -p ncspot metadata --format '{{(title)}} - {{(artist)}}')"  && exit

playerctl -p ncspot metadata --format '{{(title)}} - {{(artist)}}'
