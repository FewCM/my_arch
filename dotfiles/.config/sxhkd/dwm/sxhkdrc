# Reload functions
#super + Escape
#	"$XDG_CONFIG_HOME"/sxhkd/functions

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd
	
# Keybindings cheat sheet
ctrl + Escape
	$HOME/.local/bin/dwm/keybinds_cheat_sheet
	
##---------- Keybindings for WM----------##

# Terminal (st)
super + Return
	st

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + l
	launcher

# Run apps as root
super + r
	asroot

# mpd control
super + m
	mpd.sh
		
# Rofi Network Menu
super + n
	nmd

# Power Menu
super + x
	powermenu

# windows list
super + w
	windows

# screenshot
super + s
	screenshot

# dwmreload
super + shift + BackSpace
	dwmreload

# dwm quit
super + shift + q
	dwmc quit
	
# dwm restart
super + shift + r
	dwmc self_restart

##---------- Applications ----------##

# Launch geany
super + e
	geany
	
# Launch geany
super + v
	vlc
	
# Launch Google Chrome
super + g
	google-chrome-beta-wrapper

# Launch Microsoft Edge	
super + b
	microsoft-edge-dev-wrapper

# Launch Nemo 
super + f
	nemo	

# Launch Alacritty
super + t
	dwmterm

# Launch Citra
alt + ctrl + c
	citra
	
# restart fcitx
alt + f
	fcitx5 -r

# kill fcitx
alt + ctrl + f
	pkill fcitx5

##---------- System ----------##

	
# Audio Mute
XF86AudioMute
	pulseaudio-control togmute

# Audio Lower Volume
XF86AudioLowerVolume
	pulseaudio-control down

# Audio Raise Volume
XF86AudioRaiseVolume
	pulseaudio-control up
	
# choose next sink
alt + F12
	pulseaudio-control nextsink

# Media Play/Pause
XF86AudioPlay
	playerctl play-pause

# Media Previous
XF86AudioPrev
	playerctl previous

# Media Next
XF86AudioNext
	playerctl next
	
#set layout (Tiled)
super + F1
	dwmc setlayoutex 0

#set layout (gaplessgrid)
super + F2
	dwmc setlayoutex 1

#set layout (centeredmaster)
super + F3
	dwmc setlayoutex 2

#set layout (bstack)
super + F4
	dwmc setlayoutex 3

#set layout (bstackhoriz)
super + F5
	dwmc setlayoutex 4
	
#set layout (spiral)
super + F4
	dwmc setlayoutex 5

#set layout (dwindle)
super + F6
	dwmc setlayoutex 6
	
#set layout (horizgrid)
super + F7
	dwmc setlayoutex 7

#set layout (Float)
super + F8
	dwmc setlayoutex 8
	
# togglefloating
super + shift + space
	dwmc togglefloating

# close windows
super + c
	dwmc killclient

# view all clients
super + 0
	dwmc viewall

# move focused clients to tag
super + shift + 0
	dwmc tag

# toggle sticky
alt + s
	dwmc togglesticky

# decrease borderpx
super + ctrl + minus
	dwmc setborderpx -1

# increase borderpx
super + ctrl + equal
	dwmc setborderpx +1

# default borderpx
super + ctrl + backslash
	dwmc setborderpx 0
	
# default togglegaps
super + alt + space
    dwmc togglegaps
    
# focus next monitor
super + {comma,period}
    dwmc focusmon {-,+}1

# send focused client to next monitor
super + shift + {comma,period}
    dwmc tagmon {-,+}1

# focus next client in stack
super + j
	dwmc focusstack -1

# focus next client in stack
super + k
	dwmc focusstack +1

